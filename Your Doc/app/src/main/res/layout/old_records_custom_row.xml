<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/identifier"
        android:layout_width="3dp"
        android:layout_height="30dp"
        android:background="#F2CC5D"
        android:text="" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/identifier"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="18dp"
        android:gravity="right"
        android:layout_toLeftOf="@+id/identifier"
        android:text="بعض النصوص بعض النصوص بعض النصوص بعض النصوص بعض النصوص بعض النصوص " />

    <TextView
        android:id="@+id/category"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/identifier"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:background="#F2CC5D"
        android:gravity="center"
        android:layout_marginStart="70dp"
        android:text="أنفصام" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@mipmap/record_icon"
        android:text=""
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@+id/category"
        android:layout_alignTop="@+id/category" />
</RelativeLayout>