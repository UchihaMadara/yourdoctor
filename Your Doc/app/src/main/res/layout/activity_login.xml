<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41A8F7">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_edit" />

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_edittet_selector"
        android:ems="10"
        android:gravity="center"
        android:hint="أسم الدخول"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/name_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_edittet_selector"
        android:ems="10"
        android:gravity="center"
        android:hint="كلمة السر"
        android:inputType="textPassword" />
    <RadioGroup
        android:id="@+id/radio_type"
        android:orientation="horizontal"
        android:layout_below="@id/pass_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مريض"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_doc"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دكتور" />

    </RadioGroup>

    <TextView
        android:id="@+id/new_user"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pass_edittext"
        android:layout_alignRight="@+id/pass_edittext"
        android:layout_below="@+id/radio_type"

        android:layout_marginTop="5dp"
        android:text="مستخدم جديد" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/new_user"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/new_user"
        android:layout_toStartOf="@+id/new_user"
        android:text="قم بالتسجيل"
        android:textColor="@android:color/white" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:id="@+id/login_submit"
        android:background="#F2CC5D"
        android:layout_below="@id/new_user"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/login_submit"
        android:layout_alignParentBottom="true"
        android:background="#F2CC5D">

        <TextView
            android:id="@+id/copy_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="جميع الحقوق مفوظة لشركة الفاستيم الشرق الاوسط" />
    </RelativeLayout>


</RelativeLayout>
</ScrollView>