<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41A8F7"
    tools:context="com.ahmed.yourdoc.activities.RecordActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <LinearLayout
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tool_bar"
        android:background="#FFF"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/record_man"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/space"
        android:scaleType="centerCrop"
        android:src="@mipmap/img" />

    <LinearLayout
        android:id="@+id/after_man"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/record_man"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="#F2cc5c">

        <TextView
            android:id="@+id/copy_right_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="جميع الحقوق مفوظة لشركة الفاستيم الشرق الاوسط" />
    </LinearLayout>

    <Button
        android:id="@+id/start_record"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="@drawable/record_button_selector"
        android:text="أبدأ التسجيل"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tv_time_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_above="@id/linearLayout"
        android:layout_marginBottom="75dp"
        android:layout_centerHorizontal="true"
        android:text="لديك 2 دقيقة كحد أقصى" />

</RelativeLayout>
